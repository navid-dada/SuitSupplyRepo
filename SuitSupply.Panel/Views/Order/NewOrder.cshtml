@model OrderInput

<div class="jumbotron">
    <form asp-action="Post">
        <div class="form-group">
            
            <label for="txtEmail">Customer Email:</label>
            <input asp-for="Email" class="form-control form-control-sm" id="txtEmail" type="email" placeholder="Email"/>

            <table class="table-bordered">
                <thead>
                <td>#</td>
                <td class="col-4">Type</td>
                <td class="col-4">Side</td>
                <td class="col-4">Size(cm)</td>
                </thead>
                <tbody id="table-data">
                <tr>
                    <td>1</td>
                    <td>
                        <select asp-for="Alternations[0].Part">
                            <option value="0">Sleeve</option>
                            <option value="1">Trousers</option>
                        </select>
                    </td>
                    <td>
                        <select asp-for="Alternations[0].Side">
                            <option value="0">Right</option>
                            <option value="1">Left</option>
                        </select>
                    </td>
                    <td><input asp-for="Alternations[0].Size" type="number" max="5" min="-5" step="0.1"/></td>
                </tr>
                </tbody>
            </table>
            <div class="btn-group">
                <input type="button" class="btn btn-danger" id="btn-add" value="Add Row"/>
                <button type="submit" class="btn btn-success" name="btn-ok">Submit</button>
            </div>

        </div>
    </form>
</div>

<script type="text/javascript" src="../lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
$("#btn-add").on("click", function(sender, b) {
    var rowCount = $("#table-data tr").length;
    if (rowCount < 4){
        var itemIndex = rowCount;
        rowCount++; 
        $("#table-data").append("<tr> <td>"+rowCount+"</td><td><select name= \"Alternations["+itemIndex+"].Part\" ><option value=\"0\">Sleeve</option><option value=\"1\">Trousers</option></select></td><td><select name=\"Alternations["+itemIndex+"].Side\"><option value=\"0\">Right</option><option value=\"1\">Left</option></select></td><td><input name=\"Alternations["+itemIndex+"].Size\" type=\"number\" max=\"5\" min=\"-5\" step=\"0.1\"/></td></tr></tbody>");
    }
})
</script>
